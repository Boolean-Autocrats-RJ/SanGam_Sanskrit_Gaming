<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/changepass"
    android:paddingHorizontal="30dp"
    tools:context=".ChanePasswordActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:hint="Enter Your Current Password"
            android:textColorHint="#ECE3E3"
            android:paddingVertical="15dp"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:id="@+id/currentPass"
            android:background="#A1838181"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pass2"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:hint="Enter Your New Password"
            android:textColorHint="#ECE3E3"
            android:paddingVertical="15dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:paddingLeft="60dp"
            android:id="@+id/newPass1"
            android:background="#A1838181"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pass2"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:hint="Confirm Your New Password"
            android:textColorHint="#ECE3E3"
            android:paddingVertical="15dp"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:id="@+id/newPass2"
            android:background="#A1838181"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pass2"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/changeBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_button"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHighlight="@color/white"
        android:textColorLink="@color/white"
        android:textSize="25dp"
        app:backgroundTint="@color/white"
        app:rippleColor="@color/white" />





</LinearLayout>